{
    "apiVersion": "v1",
    "kind": "Template",
    "metadata": {
        "name": "nginx"
    },
    "objects": [
        {
            "kind": "ReplicationController",
            "apiVersion": "v1",
            "metadata": {
                "name": "nginx-passthrough-${IDENTIFIER}"
            },
            "spec": {
                "replicas": 1,
                "template": {
                    "spec": {
                        "restartPolicy": "Always",
                        "containers": [
                            {
                                "image": "docker.io/jmencak/nginx",
                                "imagePullPolicy": "IfNotPresent",
                                "name": "nginx-passthrough",
                                "ports": [
                                    {
                                        "name": "http",
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "name": "https",
                                        "containerPort": 8443,
                                        "protocol": "TCP"
                                    }
                                ],
                                "securityContext": {
                                    "capabilities": {
                                        "drop": [
                                            "KILL",
                                            "MKNOD",
                                            "SETGID",
                                            "SETUID",
                                            "SYS_CHROOT"
                                        ]
                                    },
                                    "privileged": false
                                },
                                "terminationMessagePath": "/dev/termination-log"
                            }
                        ]
                    },
                    "metadata": {
                        "labels": {
                            "name": "nginx-passthrough-${IDENTIFIER}",
                            "test": "http"
                        }
                    }
                },
                "selector": {
                    "name": "nginx-passthrough-${IDENTIFIER}"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "nginx-passthrough-${IDENTIFIER}"
            },
            "spec": {
                "host": "${APPLICATION_DOMAIN}",
                "to": {
                    "kind": "Service",
                    "name": "nginx-passthrough-${IDENTIFIER}"
                },
                "tls": {
                    "termination": "passthrough"
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "nginx-passthrough-${IDENTIFIER}",
                "labels": {
                    "name": "nginx-passthrough"
                },
                "annotations": {
                    "description": "Exposes and load balances the application pods"
                }
            },
            "spec": {
                "selector": {
                    "name": "nginx-passthrough-${IDENTIFIER}"
                },
                "type": "NodePort",
                "ports": [
                    {
                        "name": "https",
                        "protocol": "TCP",
                        "port": 8443,
                        "targetPort": 8443
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "name": "APPLICATION_DOMAIN",
            "displayName": "Application Hostname",
            "description": "The exposed hostname that will route to the nginx-* service, if left blank a value will be defaulted.",
            "value": ""
        },
        {
            "name": "IDENTIFIER",
            "description": "Number to append to the name of resources",
            "value": "1"
        }
    ]
}
